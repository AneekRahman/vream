<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_holder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:orientation="vertical"
    android:paddingTop="34dp"
    android:paddingBottom="10dp"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/post_interaction_button_holder">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/post_content_holder"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/post_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/user_dp"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/user_dp_thumbnail_stroke"
                                android:padding="1dp"/>

                            <TextView
                                android:id="@+id/username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@aneek_rahman"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:singleLine="true"
                                android:fontFamily="@font/varela_round_regular"/>

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                app:srcCompat="@drawable/ic_verified_icon_red"
                                android:visibility="visible" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:34 PM"
                            android:textColor="#aaa"
                            android:layout_marginLeft="6dp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/varela_round_regular"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exampleText"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:textColor="#000"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/varela_round_regular"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eee"/>

                </LinearLayout>

            </ScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/nav_bar_shadow"
                android:layout_above="@id/post_interaction_button_holder"/>

            <LinearLayout
                android:id="@+id/post_interaction_button_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/heart_button"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_heart_filled"/>

                <ImageView
                    android:id="@+id/comment_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_comments_icon"/>

                <ImageView
                    android:id="@+id/promote_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="7dp"
                    app:srcCompat="@drawable/ic_promote_icon"/>

                <LinearLayout
                    android:id="@+id/counts_holder"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginRight="12dp">

                    <TextView
                        android:id="@+id/heart_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.5k hearts"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/varela_round_regular"/>

                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4k comments"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/varela_round_regular"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>